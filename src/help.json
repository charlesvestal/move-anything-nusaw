{
  "title": "NuSaw",
  "children": [
    {
      "title": "Overview",
      "lines": [
        "Polyphonic detuned",
        "multi-saw synth.",
        "",
        "3-25 saws per voice,",
        "8-voice polyphony.",
        "Stereo panning with",
        "analog drift.",
        "",
        "Resonant lowpass",
        "filter, dual ADSR",
        "envelopes, Juno-60",
        "style chorus, and",
        "ping-pong delay.",
        "",
        "27 factory presets."
      ]
    },
    {
      "title": "Controls",
      "children": [
        {
          "title": "Knob Mapping",
          "lines": [
            "Knob 1: Cutoff",
            "Knob 2: Resonance",
            "Knob 3: Detune",
            "Knob 4: Spread",
            "Knob 5: Attack",
            "Knob 6: Decay",
            "Knob 7: Sustain",
            "Knob 8: Release"
          ]
        },
        {
          "title": "Oscillator",
          "lines": [
            "Saws: 3-25 (odd)",
            " Number of detuned",
            " saws per voice.",
            " 1 center + pairs.",
            "",
            "Detune: spread",
            " between saws.",
            " Subtle at low,",
            " dramatic at high.",
            "",
            "Spread: stereo",
            " width of detuned",
            " pairs (0=mono).",
            "",
            "Sub Level: sine",
            " sub-oscillator",
            "Sub Oct: -2, -1,",
            " or 0 octaves"
          ]
        },
        {
          "title": "Filter",
          "lines": [
            "2-pole resonant",
            "lowpass (TPT/SVF).",
            "",
            "Cutoff: 20Hz-20kHz",
            " (exponential)",
            "",
            "Resonance: feedback",
            "",
            "Filt Env: how much",
            " filter envelope",
            " modulates cutoff",
            " (0-8 octaves)"
          ]
        },
        {
          "title": "Envelopes",
          "lines": [
            "Amp Envelope:",
            " Attack, Decay,",
            " Sustain, Release",
            " Controls volume.",
            "",
            "Filter Envelope:",
            " F.Attack, F.Decay,",
            " F.Sustain, F.Release",
            " Controls cutoff.",
            "",
            "Times: 1ms to 10s",
            "(exponential curve)"
          ]
        },
        {
          "title": "Effects",
          "lines": [
            "Chorus (Juno-60):",
            " Mix: dry/wet blend",
            " Depth: LFO amount",
            " Stereo widening.",
            "",
            "Delay (ping-pong):",
            " Time: 20ms-1000ms",
            " Feedback: repeats",
            "  (max 95%)",
            " Mix: dry/wet blend",
            " Tone: LP on feedback",
            "  (500Hz-12kHz)",
            "",
            "L feeds R, R feeds L",
            "for stereo movement."
          ]
        },
        {
          "title": "Performance",
          "lines": [
            "Volume: master level",
            "",
            "Vel Sensitivity:",
            " 0=no velocity",
            " 1=full dynamics",
            "",
            "Bend Range:",
            " 0-12 semitones",
            " (default 2)",
            "",
            "Octave: -3 to +3"
          ]
        }
      ]
    },
    {
      "title": "MIDI",
      "lines": [
        "8-voice polyphony",
        "with oldest-note",
        "stealing.",
        "",
        "Pitch Bend:",
        " Configurable range",
        " (default 2 semi)",
        "",
        "CC 123: All Notes Off"
      ]
    }
  ]
}
